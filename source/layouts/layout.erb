<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Portfolio of Matt Rothenberg" %></title>

    <link href="https://fonts.googleapis.com/css?family=Rubik:400,700|Space+Mono:400,700" rel="stylesheet">

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %> p1 sm-p0 wrap sm-flex flex-column">
    <%= partial 'header' %>
    <main class="flex-auto">
      <%= yield %>
    </main>
    <%= partial 'footer' %>
    <%= javascript_include_tag :all %>
  </body>
</html>
